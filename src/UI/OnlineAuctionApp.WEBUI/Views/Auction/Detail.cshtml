@model AuctionBidModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Quick Auction</h3>
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputPrice">Price</label>
                            <input type="number" min="0" class="form-control" id="inputPrice" placeholder="Enter Price" />
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary" id=sendButton"">Submit</button>
                        <button type="submit" class="btn btn-danger" id=finishButton"">Finish</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card-header" style="background-color:darkgray">
                <h3 class="card-title"> Active Auction Detail </h3>
            </div>
            @Html.HiddenFor(x=>x.AuctionId)
            @Html.HiddenFor(x=>x.ProductId)
            @Html.HiddenFor(x=>x.SellerUserName)
            <div class="card-body">
                <table id="auction" class="table table-bordered table-hover">
                    <thead>
                        <tr style="background-color:darkgray">
                            <th>Auction UserName</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody class="bidLine">
                   @if (Model.Bids is not null)
                    {
                        foreach (var bid in Model.Bids)
                        {
                            <tr>
                                <td>@bid.SellerUserName</td>
                                <td>@bid.Price</td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/microsoft-signalr/signalr.js"></script>
<script src="~/detail.js"></script>
